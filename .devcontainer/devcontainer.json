{
    "build": {
        "dockerfile": "Dockerfile",
        "args": { "USERNAME": "${localEnv:USER}" } 
    },
    "remoteUser": "${localEnv:USER}",
    "postCreateCommand": "chmod +x /workspaces/Waveshare-RP2040-Touch-LCD-1.28/build.bash; cp /workspaces/Waveshare-RP2040-Touch-LCD-1.28/scripts/arduino-cli.yaml /home/${localEnv:USER}/.arduino15/arduino-cli.yaml",
    "customizations": {
        "vscode": {
            "extensions": [
                "vsciot-vscode.vscode-arduino",
                "GitHub.vscode-github-actions",
                "eamodio.gitlens",
                "PKief.material-icon-theme"
            ]
        }
    }
    // ,"forwardPorts": [3000]
    ,"mounts": [
        // Need for usbip command
        // See "/sys" container is readonly here : https://github.com/home-assistant/supervisor/issues/3861
        // See https://stackoverflow.com/questions/42938992/usbip-in-docker
        { "source": "/sys", "target": "/sys", "type": "bind" }
        ,{ "source": "/dev", "target": "/dev", "type": "bind" }
        ,{ "source": "projectname-bashhistory", "target": "/commandhistory", "type":"volume" }
        
    ]
}